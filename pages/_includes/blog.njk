    <meta name="HandheldFriendly" content="True"/>
    <meta name="MobileOptimized" content="320"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="referrer" content="no-referrer"/>

    {% if noIndex %}
      <meta name="robots" content="noindex">
    {% endif %}

    <meta name="description" content="{{ description }}"/>

    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:domain" content="www.erikvanek.com"/>

    <meta name="twitter:image" content="/zen-circle.ico"/>
    <meta
      name="twitter:title"
      property="og:title"
      itemprop="title name"
      content="{{ title }} | Erik Vanƒõk"
/>
    <meta
      name="twitter:description"
      property="og:description"
      itemprop="description"
      content="{{ description }}"
/>
    <meta name="og:type" content="website"/>
    <meta name="og:url" content="www.erikvanek.com/"/>
    <meta
      name="og:image"
      itemprop="image primaryImageOfPage"
      content="/zen-circle.ico"
/>

    <title>{{ title }} | Erik Vanƒõk</title>
    <link rel="shortcut icon" href="/zen-circle.ico" id="favicon"/>
    <link rel="stylesheet" href="/css/2024.css"/>
    <link rel="stylesheet" href="/css/blog-2024.css"/>
    <link rel="stylesheet" href="/css/lightbox.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap"
      rel="stylesheet"
/>
  </head>

  {% include "_analytics.html" %}

</html>
<body>

  {% include "navbar.html" %}

  <div class="section" id="splash">
    <div class="article">
      {# {% if hideNavigation !== true%}
        <a href="/" id="home">‚Üê back Home üè†</a>
      {% endif %}
      {% if title !== "Blog" and (hideBlog !== true) and
      (hideNavigation !== true)%}
        <a href="/blog" id="blog-root">‚Üê Blog</a>
      {% endif %} #}
      <h2>{{ title }}</h2>
      {% if subtitle %}
        <h3>
          <em>"{{ subtitle }}"</em>
        </h3>
      {% endif %}
      {% if author %}
        <h3>by {{ author }}</h3>
      {% endif %}
      {% if title !== "Blog" %}
        {% if (title !== "Hey! I'm Erik")
      and (hideDate !== true)%}
          <time>{{ date.toDateString("cs") }}</time>
        {% endif %}
      {% else %}
        {% for post in collections.posts | reverse %}
          <a href="{{ post.url }}" class="blog-row">
            <h3>
              {{ post.data.title }}
            </h3>

            <div class="blog-subtitle">
              <div class="tags">
                {% for tag in post.data.tags | reverse%}
                  {%if tag != 'posts' %}
                    <span class="tag">{{ tag }}</span>

                  {% endif %}
                {% endfor %}
              </div>

              <time>{{ post.date.toDateString("cs") }}</time>
            </div>
          </a>
        {% endfor %}
      {% endif %}

      <article>{{ content | safe }}</article>
    </div>
  </div>

  {% include "scripts.html" %}

</body>