<body>
    <div class="section" id="splash">
        <div class="article">
            <a href="/">‚Üê back Home üè†</a>
            {% if title !== "Blog" %}
                <a href="/blog">‚Üê Blog</a>
            {% endif %}
            <h1>{{title}}</h1>

            {% if title !== "Blog" %}
                <time>{{ date.toDateString('cs')}}</time>

            {% else %}
                {% for post in collections.posts | sort(attribute = 'date', reverse = true) %}
                    <h2>
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </h2>

                    <div class="blog-subtitle">
                        <div class="tags">
                            {% for tag in post.data.tags | sort%}
                                {%if tag != 'posts' %}
                                    <span class="tag">{{tag}}</span>

                                {% endif %}

                            {% endfor %}
                        </div>

                        <time>{{post.date.toDateString('cs')}}</time>

                    </div>
                {% endfor %}

            {% endif %}

            <article>{{content | safe}}</article>
        </div>
    </div>
</body>