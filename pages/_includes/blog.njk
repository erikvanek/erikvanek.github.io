<body id="pattern-1" class="active">
    <div class="section" id="splash">
        <div class="article">
            {% if hideNavigation !== true%}
                <a href="/">‚Üê back Home üè†</a>
            {% endif %}

            {% if title !== "Blog" and (hideBlog !== true) and (hideNavigation !== true)%}
                <a href="/blog">‚Üê Blog</a>
            {% endif %}
            <h1>{{title}}</h1>
            {% if subtitle %}
                <h2>
                    <em>"{{subtitle}}"</em>
                </h2>
            {% endif %}
            {% if author %}
                <h2>
                    by {{author}}
                </h2>
            {% endif %}
            {% if title !== "Blog" %}

                {% if (title !== "Hey! I'm Erik") and (hideDate !== true)%}
                    <time>{{ date.toDateString('cs')}}</time>
                {% endif %}
            {% else %}
                {% for post in collections.posts | reverse %}
                    <a href="{{ post.url }}" class="blog-row">
                        <h2>
                            {{ post.data.title }}
                        </h2>

                        <div class="blog-subtitle">
                            <div class="tags">
                                {% for tag in post.data.tags | reverse%}
                                    {%if tag != 'posts' %}
                                        <span class="tag">{{tag}}</span>

                                    {% endif %}

                                {% endfor %}
                            </div>

                            <time>{{post.date.toDateString('cs')}}</time>
                        </div>
                    </a>
                {% endfor %}

            {% endif %}

            <article>{{content | safe}}</article>
        </div>
    </div>
</body>