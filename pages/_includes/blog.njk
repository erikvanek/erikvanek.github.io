    {% if noIndex %}
    <meta name="robots" content="noindex">
    {% endif %}

    <meta name="description" content="{{ description }}"/>

    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:domain" content="www.erikvanek.com"/>

    <meta name="twitter:image" content="/zen-circle.ico"/>
    <meta
      name="twitter:title"
      property="og:title"
      itemprop="title name"
      content="{{ title }} | Erik Vanƒõk"
/>
    <meta
      name="twitter:description"
      property="og:description"
      itemprop="description"
      content="{{ description }}"
/>
    <meta name="og:type" content="website"/>
    <meta name="og:url" content="www.erikvanek.com/"/>
    <meta
      name="og:image"
      itemprop="image primaryImageOfPage"
      content="/zen-circle.ico"
/>

    <title>{{ title }} | Erik Vanƒõk</title>
    <link rel="shortcut icon" href="/zen-circle.ico" id="favicon"/>
    <link rel="stylesheet" href="/css/2024.css"/>
    <link rel="stylesheet" href="/css/blog-2024.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap"
      rel="stylesheet"
/>
  </head>

</html>
<body>

  <nav>
    <ul class="menu" id="menu">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/profile">Profile</a>
      </li>
      <!-- <li>
                        <a href="/work">Work</a>
                    </li> -->
      <li>
        <a href="/blog">Blog</a>
      </li>
      <a class="close" href="#">
        <svg width="100%" height="100%" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke-width="2" stroke-linecap="round"
                            stroke-linejoin="round"/>
        </svg>
      </a>
    </ul>
    <a href="/" id="home">erikvanek.com</a>
    <a class="hamburger" href="#menu">
      <svg width="100%" height="100%" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 12H21M3 6H21M9 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round"/>
      </svg>
    </a>
  </nav>

  <div class="section" id="splash">
    <div class="article">
      {# {% if hideNavigation !== true%}
        <a href="/" id="home">‚Üê back Home üè†</a>
      {% endif %}
      {% if title !== "Blog" and (hideBlog !== true) and
      (hideNavigation !== true)%}
        <a href="/blog" id="blog-root">‚Üê Blog</a>
      {% endif %} #}
      <h1>{{ title }}</h1>
      {% if subtitle %}
        <h2>
          <em>"{{ subtitle }}"</em>
        </h2>
      {% endif %}
      {% if author %}
        <h2>by {{ author }}</h2>
      {% endif %}
      {% if title !== "Blog" %}
        {% if (title !== "Hey! I'm Erik")
      and (hideDate !== true)%}
          <time>{{ date.toDateString("cs") }}</time>
        {% endif %}
      {% else %}
        {% for post in collections.posts | reverse %}
          <a href="{{ post.url }}" class="blog-row">
            <h2>
              {{ post.data.title }}
            </h2>

            <div class="blog-subtitle">
              <div class="tags">
                {% for tag in post.data.tags | reverse%}
                  {%if tag != 'posts' %}
                    <span class="tag">{{ tag }}</span>

                  {% endif %}
                {% endfor %}
              </div>

              <time>{{ post.date.toDateString("cs") }}</time>
            </div>
          </a>
        {% endfor %}
      {% endif %}

      <article>{{ content | safe }}</article>
    </div>
  </div>

  <script type="text/javascript">
    document.addEventListener("DOMContentLoaded", (event) => {
      const path = window
        .location
        .pathname
        .replaceAll('/', '');
      const children = document.querySelectorAll('nav > ul > li');
      console.log(path)
      if (path === '') {
        children[0]
          .classList
          .add('nav-active')
      } else if (path === 'profile') {
        children[1]
          .classList
          .add('nav-active')
      } else if (path === 'blog') {
        children[2]
          .classList
          .add('nav-active')
      }
    })
  </script>

</body>